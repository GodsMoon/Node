		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:gravity="center_horizontal"
		android:text="Sun"
	/>

	<TextView
		android:layout_margin="1dip"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1"
