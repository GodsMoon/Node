		android:layout_margin="1dip"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:gravity="center_horizontal"
		android:text="Wed"
	/>
	
	<TextView
		android:layout_margin="1dip"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:gravity="center_horizontal"
		android:text="Thu"
	/>
	
	<TextView
		android:layout_margin="1dip"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:gravity="center_horizontal"
		android:text="Fri"
	/>

	<TextView
		android:layout_margin="1dip"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:gravity="center_horizontal"
		android:text="Sat"
	/>			
</LinearLayout>