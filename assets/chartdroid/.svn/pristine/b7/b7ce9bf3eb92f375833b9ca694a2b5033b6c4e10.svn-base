<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:gravity="top"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

	<ImageView android:id="@+id/flickr_photo_thumbnail"
		android:src="@drawable/picture_unknown_1"
		android:scaleType="centerInside"
        android:layout_width="48sp"
        android:layout_height="48sp"
	/>

	<LinearLayout
	    android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_weight="1"
	    android:paddingLeft="5dip"
	    android:layout_height="wrap_content">
    
	    <TextView android:id="@+id/flickr_photo_title"
	        android:layout_gravity="center_vertical"
	        android:singleLine="true"
	        android:textStyle="bold"
	        android:text="title"
	        android:ellipsize="marquee"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" />

	    <TextView android:id="@+id/flickr_photo_description"
	    	android:text="description"
	    	android:textColor="@color/white"
	        android:layout_gravity="center_vertical"
	        android:layout_width="wrap_content"
	        android:maxLines="5"
	        android:ellipsize="end"
	        android:layout_marginBottom="1sp"
	        android:layout_height="wrap_content" />

	</LinearLayout>


    <TextView android:id="@+id/flickr_comment_date"
    	android:layout_marginRight="5sp"
    	android:textColor="@color/flickr_blue"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
	/>

</LinearLayout>
