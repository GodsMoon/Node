<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainPageButton">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textStyle">bold</item>
		<item name="android:textColor">@android:color/black</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <!-- 
        <item name="android:shadowColor">@color/flickr_pink</item>
        -->
        <item name="android:shadowColor">@android:color/white</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
    </style>
    
    
    <style name="MainPageButtonBar">
        <item name="android:clipChildren">false</item>
        <item name="android:gravity">top</item>
		<item name="android:orientation">vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    
	<style name="Theme.DarkerWallpaperSettings" parent="@android:style/Theme.WallpaperSettings">
	    <item name="android:windowBackground">@color/partly_translucent_black</item>
	</style>
</resources>